<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <io.alehub.alehubwallet.view.TextViewFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wallet name"
        app:fontName="museo_500"
        android:layout_marginBottom="4dp"
        android:textSize="16sp"
        android:textColor="@color/text_dark"
        android:id="@+id/tv_wallet_drawer_element_title"
        />
    <io.alehub.alehubwallet.view.TextViewFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0,000 ALC"
        app:fontName="museo_300"
        android:textSize="16sp"
        android:textColor="@color/text_dark_70"
        android:id="@+id/tv_wallet_drawer_element_count"
        />
</LinearLayout>