<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoAb" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="DrawerSearchHint" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/DrawerSearchHintText</item>
    </style>

    <style name="DrawerSearchHintText" parent="@style/TextAppearance.Design.Hint">
        <item name="android:textColor">@color/text_white_50</item>
    </style>

    <style name="DrawerSearchEdit">
        <item name="colorControlNormal">@color/text_white_50</item>
        <item name="colorControlActivated">@color/text_white_50</item>
        <item name="colorControlHighlight">@color/text_white_50</item>
    </style>

    <style name="ToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:actionMenuTextAppearance">@style/MenuFontStyle</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/text_white</item>
        <item name="titleTextAppearance">@style/TitleFontStyle</item>
        <item name="android:titleTextStyle">@style/TitleFontStyle</item>
        <item name="android:popupBackground">@color/drawer_bg</item>
        <item name="popupTheme">@style/ToolbarPopup</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!--  <item name="android:windowDisablePreview">true</item>
          <item name="overlapAnchor">false</item>
          <item name="android:dropDownVerticalOffset">4.0dip</item>
          <item name="android:popupBackground">#FFF</item>-->
    </style>

    <style name="ToolbarPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/drawer_bg</item>
        <item name="android:textColorPrimary">@color/text_white</item>
    </style>

    <style name="MenuFontStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@color/drawer_bg</item>
    </style>


    <style name="TitleFontStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="SubtitleFontStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="MyButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless"></style>


</resources>
